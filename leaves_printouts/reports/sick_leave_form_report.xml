        </t>
    </template>

    <record id="action_sick_leave_form_report" model="ir.actions.report">
        <field name="name">نموذج أجازة مرضية</field>
        <field name="model">hr.leave</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">leaves_printouts.report_sick_leave_form_printout</field>
        <field name="report_file">leaves_printouts.report_sick_leave_form_printout</field>
        <field name="binding_model_id" ref="hr_holidays.model_hr_leave"/>
