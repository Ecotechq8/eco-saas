<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hr_promotion_form">
        <field name="name">hr.promotion.form</field>
        <field name="model">hr.promotion</field>
        <field name="arch" type="xml">
            <form string="Promotions">
                <header>
                    <button type="object" string="Request" name="button_promotion_request" class="btn-primary"
                            invisible="state != 'new'"/>
                    <button type="object" string="Approve" name="button_approve_request" class="btn-primary"
                            invisible="state != 'requested'"/>
                    <button type="object" string="Submit Change" name="button_submit_change" class="btn-primary"
                            invisible="state != 'approved'"/>
                    <button type="object" string="Back To Draft" name="button_back_to_draft"
                            invisible="state != 'cancel'"/>
                    <button type="object" string="Cancel" name="button_cancel_request"
                            invisible="state not in ('approved', 'requested')"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,requested,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="employee_id" name="Employee"/>
                        <h1>
                            <field name="employee_id" options="{'no_create':True}"
                                   readonly="state != 'new'" placeholder="Employee" required="1"/>
                        </h1>
                        <label for="date" name="Date"/>
                        <field name="date" readonly="state != 'new'"/>
                    </div>
                    <group>
                        <group string="Current Position">
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="manager_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="New Position">
                            <field name="is_regular" invisible="1"/>
                            <field name="new_department_id" options="{'no_create':True}"
                                   readonly="state != 'new' or is_regular == True"/>
                            <field name="new_job_id" required="1" options="{'no_create':True}"
                                   readonly="state != 'new'"/>
                            <field name="new_manager_id" options="{'no_create':True}" readonly="state != 'new'"/>
                        </group>
                    </group>
                    <group>
                        <group string="Salary Increase">
                            <field name="increase_types" widget="radio" readonly="state != 'new'"/>
                            <field name="inc_amount"
                                   invisible="increase_types != 'amount'" readonly="state != 'new'"/>

                            <field name="inc_housing_allowance"
                                   invisible="increase_types != 'amount'" readonly="state != 'new'"/>
                            <field name="inc_transportation_allowance"
                                   invisible="increase_types != 'amount'" readonly="state != 'new'"/>
                            <field name="inc_other_allowances"
                                   invisible="increase_types != 'amount'" readonly="state != 'new'"/>


                            <label for="inc_percent" invisible="increase_types != 'percent'"/>
                            <div invisible="increase_types != 'percent'">
                                <field name="inc_percent" class="oe_inline" readonly="state != 'new'"/>
                                <strong>%</strong>
                            </div>

                            <label for="inc_housing_allowance_percent" invisible="increase_types != 'percent'"/>
                            <div invisible="increase_types != 'percent'">
                                <field name="inc_housing_allowance_percent" class="oe_inline"
                                       readonly="state != 'new'"/>
                                <strong>%</strong>
                            </div>
                            <label for="inc_transportation_allowance_percent" invisible="increase_types != 'percent'"/>
                            <div invisible="increase_types != 'percent'">
                                <field name="inc_transportation_allowance_percent" class="oe_inline"
                                       readonly="state != 'new'"/>
                                <strong>%</strong>
                            </div>

                            <label for="inc_other_allowances_percent" invisible="increase_types != 'percent'"/>
                            <div invisible="increase_types != 'percent'">
                                <field name="inc_other_allowances_percent" class="oe_inline" readonly="state != 'new'"/>
                                <strong>%</strong>
                            </div>

                            <field name="currency_id" invisible="1"/>
                            <field name="old_gross_salary" readonly="True" force_save="1"
                                   invisible="state == 'new' or increase_types != 'adj'"/>

                            <field name="gross_salary"
                                   invisible="increase_types != 'adj'" readonly="state != 'new'"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>


                            <field name="old_housing_allowance" readonly="True" force_save="1"
                                   invisible="state == 'new' or increase_types != 'adj'"/>

                            <field name="new_housing_allowance"
                                   invisible="increase_types != 'adj'" readonly="state != 'new'"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>


                            <field name="old_transportation_allowance" readonly="True" force_save="1"
                                   invisible="state == 'new' or increase_types != 'adj'"/>

                            <field name="new_transportation_allowance"
                                   invisible="increase_types != 'adj'" readonly="state != 'new'"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>


                            <field name="old_other_allowances" readonly="True" force_save="1"
                                   invisible="state == 'new' or increase_types != 'adj'"/>

                            <field name="new_other_allowances"
                                   invisible="increase_types != 'adj'" readonly="state != 'new'"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>

                        </group>

                        <group string="Contract Salary Details">
                            <field name="wage" readonly="True" force_save="1"/>
                            <field name="housing_allowance" readonly="True" force_save="1"/>
                            <field name="transportation_allowance" readonly="True" force_save="1"/>
                            <field name="other_allowances" readonly="True" force_save="1"/>
                        </group>

                    </group>
                    <group>
                        <field name="comment" readonly="state != 'new'"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_promotion_tree">
        <field name="name">hr.promotion.tree</field>
        <field name="model">hr.promotion</field>
        <field name="arch" type="xml">
            <list string="Promotions">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="new_department_id"/>
                <field name="job_id"/>
                <field name="new_job_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_hr_promotion" model="ir.actions.act_window">
        <field name="name">Promotions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.promotion</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="hr_promotion_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Promotions
            </p>
        </field>
    </record>

    <menuitem id="menu_hr_promotion" name="Promotions" parent="hr.menu_hr_root" action="action_hr_promotion"/>
</odoo>