<odoo>
    <data noupdate="1">
        <record id="hr_salary_rule_emp_penalty" model="hr.salary.rule">
            <field name="code">PENALTY</field>
            <field name="name">Penalty</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="struct_id">1</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = (inputs.get('PENALTY') and inputs.get('PENALTY').amount > 0 ) or False</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -inputs.PENALTY.amount</field>
            <field name="sequence" eval="60"/>
        </record>
    </data>
</odoo>