<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="eco_hr_attendance_bonus_view_form" model="ir.ui.view">
        <field name="name">eco.hr.attendance.bonus.view.form</field>
        <field name="model">eco.hr.attendance.bonus</field>
        <field name="arch" type="xml">
            <form string="Employee Attendance Bonus ">
                <group>
                    <field name="applied"/>
                </group>
                <group>
                    <group>
                        <field name="number_of_attendance_days"/>
                    </group>
                    <group>
                        <field name="number_of_bonus_days"/>
                    </group>
                </group>

            </form>
        </field>
    </record>
    <record id="eco_hr_attendance_bonus_view_tree" model="ir.ui.view">
        <field name="name">eco.hr.attendance.bonus.view.list</field>
        <field name="model">eco.hr.attendance.bonus</field>
        <field name="arch" type="xml">
            <list string="Employee Attendance Bonus ">
                <field name="number_of_attendance_days"/>
                <field name="number_of_bonus_days"/>
                <field name="applied"/>
            </list>
        </field>
    </record>

    <record id="eco_hr_attendance_bonus_action" model="ir.actions.act_window">
        <field name="name">Employee Attendance Bonus</field>
        <field name="res_model">eco.hr.attendance.bonus</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
