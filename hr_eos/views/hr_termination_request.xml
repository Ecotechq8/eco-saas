<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="employee_termination_request_form_view" model="ir.ui.view">
            <field name="name">employee.termination.request.form.view</field>
            <field name="model">hr.termination.request</field>
            <field name="arch" type="xml">
                <form string="Employee Termination Request">
                    <header>
                        <button name="employee_manager_approve" string="Approve" class="oe_highlight"
                                invisible="state != 'draft'" type="object"/>
                        <button name="hr_manager_approve" string="Approve" class="oe_highlight"
                                invisible="state != 'emp_mang_submit'" groups="hr.group_hr_manager" type="object"/>
                        <button name="reject_button" string="Reject" class="oe_highlight"
                                invisible="state not in ('draft', 'emp_mang_submit')" type="object"/>

                        <button name="get_employee_termination" string="Confirm" type="object"
                                invisible="state != 'draft'"
                                class="oe_highlight"/>
                        <button name="termination_cancel" string="Cancel" type="object" invisible="state != 'draft'"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,terminated"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" readonly="state in ('terminated','canceled')"/>
                                <field name="rule_id"/>
                                <field name="last_date" readonly="state in ('terminated','canceled')"/>
                                <field name="number_of_year" readonly="1"/>
                                <field name="number_of_day" readonly="1"/>
                                <field name="percentage_value" string="Percentage Value (%)" readonly="1"/>
                                <field name="notice_period"/>
                                <field name="required_working_during_notice_period"/>
                            </group>
                            <group>
                                <field name="transferring_or_check_number"/>
                                <field name="transferring_or_check_date"/>
                                <field name="transferring_or_check_bank"/>
                            </group>
                            <group>
                                <field name="unpaid_leave_days"/>
                                <field name="unpaid_leave_amount"/>
                                <field name="annual_leave_days"/>
                                <field name="annual_leave_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Termination Reason">
                                <field name="notes" readonly="state in ('terminated','canceled')"/>
                            </page>
                            <page string="Notes and Affairs">
                                <group>
                                    <!-- <field name="project_manager_notes"/> -->
                                    <field name="legal_affairs_statement"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_termination_request_list_view" model="ir.ui.view">
            <field name="name">employee.termination.request.list.view</field>
            <field name="model">hr.termination.request</field>
            <field name="arch" type="xml">
                <list string="Termination And Resignation Rules">
                    <field name="rule_id"/>
                    <field name="employee_id"/>
                </list>
            </field>
        </record>

        <record id="employee_termination_request_action_view" model="ir.actions.act_window">
            <field name="name">Employee Termination Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.termination.request</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>