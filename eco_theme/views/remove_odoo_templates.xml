<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="auth_signup_login_remove_signup" inherit_id="auth_signup.login"
                  name="Remove Signup Link from Login">
            <xpath expr="//p[@class='mt-2 text-center']" position="replace"/>
        </template>
        <record id="view_res_config_settings_hide_about" model="ir.ui.view">
            <field name="name">res.config.settings.hide.about.section</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <!-- Hide the "About" section at the bottom -->
                <xpath expr="//div[@id='about']" position="replace"/>

            </field>
        </record>

        <template id="database_manager_no_logo" inherit_id="web.database_manager">
            <xpath expr="//img[@src='/web/static/img/logo2.png']" position="attributes">
                <attributes name="class" add="d-none" separator=" "/>
                <!-- Removed logo, you can add your own image if needed -->
                <!-- Example: <img src="/your_module/static/src/img/custom_logo.png" class="img-fluid d-block mx-auto"/> -->
            </xpath>
        </template>
    </data>
</odoo>