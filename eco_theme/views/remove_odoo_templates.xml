<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="auth_signup_login_remove_signup" inherit_id="auth_signup.login"
                  name="Remove Signup Link from Login">
            <xpath expr="//p[@class='mt-2 text-center']" position="replace"/>
        </template>
        <record id="view_res_config_settings_hide_about" model="ir.ui.view">
            <field name="name">res.config.settings.hide.about.section</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <!-- Hide the "About" section at the bottom -->
                <xpath expr="//div[@id='about']" position="replace"/>
            </field>
        </record>

        <template id="webclient_title_change" inherit_id="web.webclient_bootstrap">
        <!-- Replace the title variable instead of the <title> tag -->
        <xpath expr="//t[@t-set='title']" position="replace">
            <t t-set="title">Ecopro</t>
        </xpath>
    </template>

    <!-- 2️⃣ Login page -->
    <template id="login_title_change" inherit_id="web.login">
        <xpath expr="//title" position="replace">
            <title>Ecopro</title>
        </xpath>
    </template>

    <!-- 3️⃣ Database manager -->
    <template id="db_title_change" inherit_id="web.database_manager">
        <xpath expr="//title" position="replace">
            <title>Ecopro</title>
        </xpath>
    </template>

    <!-- 4️⃣ Global web layout (fallback for all pages) -->
    <template id="web_layout_title_change" inherit_id="web.layout">
        <xpath expr="//title" position="replace">
            <title>Ecopro</title>
        </xpath>
    </template>


    </data>
</odoo>