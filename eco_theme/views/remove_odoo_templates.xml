<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="auth_signup_login_remove_signup" inherit_id="auth_signup.login"
                  name="Remove Signup Link from Login">
            <xpath expr="//p[@class='mt-2 text-center']" position="replace"/>
        </template>
        <record id="view_res_config_settings_hide_about" model="ir.ui.view">
            <field name="name">res.config.settings.hide.about.section</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <!-- Hide the "About" section at the bottom -->
                <xpath expr="//div[@id='about']" position="replace"/>

            </field>
        </record>

        <record id="remove_db_logo" model="ir.ui.view">
            <field name="name">remove database manager logo</field>
            <field name="model">ir.ui.view</field>
            <field name="inherit_id" ref="web.login_view"/>
            <field name="arch" type="xml">
                <xpath expr="//img[@src='/web/static/img/logo2.png']" position="replace"/>
            </field>
        </record>
    </data>
</odoo>