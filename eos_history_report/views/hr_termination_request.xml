<odoo>
    <data>
        <record id="hr_termination_request_inherited_view_form" model="ir.ui.view">
            <field name="name">hr.termination.request.inherited.view.form</field>
            <field name="model">hr.termination.request</field>
            <field name="inherit_id" ref="hr_eos.employee_termination_request_form_view"/>
            <field name="arch" type="xml">
                <field name="percentage_value" position="after">
                    <field name="termination_amount"/>
                    <field name="other_allowance" readonly="state in ['terminated','canceled']"/>
                    <field name="other_deduction" readonly="state in ['terminated','canceled']"/>
                </field>
            </field>
        </record>
    </data>
</odoo>