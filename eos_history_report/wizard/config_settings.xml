            <field name="name">res.config.settings.eos</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_eos.res_config_settings_view_form_eos"/>
            <field name="arch" type="xml">
                <div name="hr_eos_calculation" position="inside">
                    <div class="d-flex">
                        <label for="eos_calculation_type" class="o_light_label"/>
                        <field name="eos_calculation_type" class="ml16"/>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>