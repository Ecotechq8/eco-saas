<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_payslip_form" model="ir.ui.view">
            <field name="name">hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <!--                <field name="contract_id" position="after">-->
                <!--                    <field name="total_num_of_days"/>-->
                <!--                    <field name="number_of_leave_days"/>-->
                <!--                    <field name="number_of_sick_days"/>-->
                <!--                </field>-->

                <!-- <field name="normal_work_days"/> -->
                <button name="compute_sheet" position="after">
                    <button name="action_payslip_send" string="Send by Email" type="object"
                            invisible="state != 'done'"/>
                </button>
                <xpath expr="//field[@name='input_line_ids']" position="before">
                    <group>
                        <group>
                            <field name="annual_leaves_count" invisible="1"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="hr_payslip_view_list" model="ir.ui.view">
            <field name="name">hr.payslip.view.list.inherit.hr.payroll.holidays</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='net_wage']" position="after">
                    <field name="total_allowance_wage" widget="monetary" options="{'currency_field': 'currency_id'}"
                           optional="show"/>
                    <field name="total_deduction_wage" widget="monetary" options="{'currency_field': 'currency_id'}"
                           optional="show"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>