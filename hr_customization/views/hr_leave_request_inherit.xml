<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_leave_request_inherit_form_view" model="ir.ui.view">
            <field name="name">hr.leave.request.inherit.form.view</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
            <field name="arch" type="xml">
                <field name="holiday_status_id" position="after">
                    <field name="country_ids" widget="many2many_tags"/>
                </field>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="compute_full_days"/>
                    <field name="expected_leave"/>
                </xpath>

                <xpath expr="//div[hasclass('o_hr_leave_content')]" position="after">
                    <notebook> 
                        <page string="Flight Details ">
                            <field name="flight_details_ids">
                                <list string="Flight Details" editable="bottom">
                                    <field  name="date_from"/>
                                    <field  name="date_to"/>
                                    <field  name="airlines"/>
                                    <field  name="flight_no"/>
                                    <field  name="ticket_class"/>
                                    <field  name="departure_date_time"/>
                                    <field  name="arrival_date_time"/>
                                </list>
                            </field>
                        </page>
                        <page string="subsidizing  Expenses">
                            <group>
                                <group>
                                    <field name="flight_tickets_unit"/>
                                    <field name="flight_tickets_host"/>
                                </group>
                                <group>
                                    <field name="hotel_unit"/>
                                    <field name="hotel_host"/>
                                </group>
                                <group>
                                    <field name="airport_pickup_unit"/>
                                    <field name="airport_pickup_host"/>
                                </group>
                                <group>
                                    <field name="transportation_unit"/>
                                    <field name="transportation_host"/>
                                </group>
                                <group>
                                    <field name="event_fees_unit"/>
                                    <field name="event_fees_host"/>
                                </group>
                                <group>
                                    <field name="others_unit"/>
                                    <field name="others_host"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>

            </field>
        </record>
    </data>
</odoo>