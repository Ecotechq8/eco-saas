<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_wizard_so_payment_form" model="ir.ui.view">
        <field name="name">view.wizard.so.payment.form</field>
        <field name="model">wizard.so.payment</field>
        <field name="arch" type="xml">
            <form string="Create Payment">
                <group>

                    <field name="order_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="amount_total" invisible="1"/>
                    <field name="company_id" invisible="1"/>

                    <group>
                        <field name="partner_id"/>
                        <field name="adv_customer" invisible="1"/>
                        <!--                        <field name="customer_retention" invisible="1"/>-->
                        <field name="journal_id" domain="[('type','in',['cash'])]"/>
                        <field name="amount_type" widget="radio" invisible="1"/>
                    </group>
                    <group>
                        <field name="adv_percent"/>
                        <field name="amount_total"/>
                        <field name="adv_amount" invisible="1"/>
                        <field name="retention_amount" invisible="1"/>
                        <field name="retention_percent" invisible="1"/>

                    </group>

                </group>

                <footer>
                    <button string="Confirm" name="action_create_payment" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_so_payment" model="ir.actions.act_window">
        <field name="name">Create Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.so.payment</field>
        <field name="view_id" ref="view_wizard_so_payment_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_order_id': active_id}</field>
    </record>


</odoo>
