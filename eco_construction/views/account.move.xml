<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">invoice.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="is_subcontracting" invisible="1"/>
                    <field name="adv_percent" readonly="1" invisible="move_type != 'out_invoice'"/>
                    <field name="retention_percent" readonly="1" invisible="move_type != 'out_invoice'"/>
                    <field name="from_date"/>
                    <field name="to_date"/>

                </field>
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="after">
                    <field name="contract_qty" readonly="1" column_invisible="not parent.is_subcontracting and parent.move_type == 'in_invoice'"/>
                    <field name="progeres" column_invisible="not parent.is_subcontracting and parent.move_type == 'in_invoice'"/>
                    <field name="last_qty" readonly="1" column_invisible="not parent.is_subcontracting and parent.move_type == 'in_invoice'"/>
                    <field name="last_progeres" column_invisible="not parent.is_subcontracting and parent.move_type == 'in_invoice'"/>
                    <field name="total_qty" readonly="1" column_invisible="not parent.is_subcontracting and parent.move_type == 'in_invoice'"/>
                    <field name="total_progeres" column_invisible="not parent.is_subcontracting and parent.move_type == 'in_invoice'"/>

                </xpath>

            </field>
        </record>

    </data>
</odoo>