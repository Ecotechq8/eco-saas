<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="employee_monthly_attendance_report_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <!--                <style>-->
                <!--                    td, th {-->
                <!--                    padding: 10px;-->
                <!--                    }-->
                <!--                </style>-->
                <div class="page" dir="rtl">
                    <div align="center">
                        <t t-if="request.env.company.logo">
                            <img t-if="request.env.company.logo" class="o_company_logo_big"
                                 t-att-src="image_data_uri(request.env.company.logo)"/>
                        </t>
                    </div>
                    <div align="center">
                        <h3>Employee Monthly Summary Attendance</h3>
                    </div>
                    <t t-set="data" t-value="doc.prepare_report_values()"/>
                    <table class=" table table-borderless" style="width=100%">
                        <tr>
                            <td>
                                من:
                                <t t-esc="data.get('date_start')"/>
                            </td>
                            <td>
                                إلى:
                                <t t-esc="data.get('date_end')"/>

                            </td>
                            <td>
                                القسم:
                                <t t-esc="data.get('department_id')"/>
                            </td>
                            <td>
                                الشركة:
                                <t t-esc="data.get('company_id')"/>
                            </td>
                        </tr>

                    </table>
                    <table class="o_has_total_table table o_main_table" style="width=100%">
                        <thead>
                            <th style="text-align:right">
                                اسم الموظف
                            </th>
                            <t t-foreach="data.get('months')" t-as="month">
                                <th style="text-align:center">
                                    <t t-out="month"/>
                                </th>
                            </t>
                            <th>
                                إجمالى
                            </th>

                        </thead>
                        <t t-foreach="data.get('employees_info')" t-as="line">
                            <tr>
                                <t t-foreach="line" t-as="col">
                                    <td>
                                        <t t-out="col"/>
                                    </td>
                                </t>

                            </tr>
                        </t>

                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>