<odoo>
    <record id="employee_bonus_form_view" model="ir.ui.view">
        <field name="name">employee.bonus.form.view</field>
        <field name="model">employee.bonus</field>
        <field name="arch" type="xml">
            <form string="Employee Bonus">
                <header>
                    <button name="employee_manager_approve" string="Approve" class="oe_highlight"
                            invisible="state != 'draft'" type="object"/>
                    <button name="hr_manager_approve" string="Approve" class="oe_highlight"
                            invisible="state != 'emp_mang_submit'" groups="hr.group_hr_manager" type="object"/>
                    <button name="reject_button" string="Reject" class="oe_highlight"
                            invisible="state not in ('draft', 'emp_mang_submit')" type="object"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,emp_mang_submit,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="state=='approved'"/>
                            <field name="bonus_type" readonly="state=='approved'"/>
                            <field name="type_of_bonus" invisible="1"/>
                            <field name="date" readonly="state=='approved'"/>
                            <field name="time" invisible="type_of_bonus != 'hour'" readonly="state=='approved'"/>
                            <field name="total_hours" invisible="type_of_bonus != 'hour'" readonly="state=='approved'"/>
                            <field name="day" invisible="type_of_bonus != 'day'" readonly="state=='approved'"/>
                            <field name="value" string="Amount" invisible="type_of_bonus != 'fixed'"
                                   readonly="state=='approved'"/>
                            <field name="amount" readonly="state=='approved'"/>
                        </group>
                        <group>
                            <field name="employee_id" readonly="state=='approved'"/>
                            <field name="department_id"/>
                            <field name="contract_id"/>
                            <field name="rate" invisible="type_of_bonus != 'hour'"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="employee_bonus_tree_view" model="ir.ui.view">
        <field name="name">employee.bonus.list.view</field>
        <field name="model">employee.bonus</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="bonus_type"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="employee_bonus_search_view" model="ir.ui.view">
        <field name="name">employee.bonus.search.view</field>
        <field name="model">employee.bonus</field>
        <field name="arch" type="xml">
            <search string="Employee Bonus">
                <field name="name"/>
                <field name="bonus_type"/>
                <field name="employee_id"/>
                <group expand="0" string="Group By">
                    <filter name="bonus_type" string="Bonus Type" domain="[]" context="{'group_by':'bonus_type'}"/>
                    <filter name="employee_id" string="Employee" domain="[]" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="employee_bonus_action" model="ir.actions.act_window">
        <field name="name">Employee Bonus</field>
        <field name="res_model">employee.bonus</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="employee_bonus_tree_view"/>
    </record>

    <menuitem id="employee_bonus_menu" parent="menu_employee_bonus" action="employee_bonus_action" sequence="1"/>

</odoo>
