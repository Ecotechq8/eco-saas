<odoo>
    <data noupdate="1">
        <record id="hr_salary_rule_emp_bonus" model="hr.salary.rule">
            <field name="code">BONUS</field>
            <field name="name">Bonus</field>
            <field name="category_id" ref="om_hr_payroll.ALW"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = (inputs.BONUS and inputs.BONUS.amount > 0) or False</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.BONUS.amount</field>
            <field name="sequence" eval="60"/>
        </record>

        <record id="om_hr_payroll.structure_base" model="hr.payroll.structure">
            <field name="rule_ids" eval="[(4, ref('hr_salary_rule_emp_bonus'))]"/>
        </record>
    </data>
</odoo>