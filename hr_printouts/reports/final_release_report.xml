    <record id="action_final_release_report" model="ir.actions.report">
        <field name="name">إخلاء طـرف</field>
        <field name="model">hr.operation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_printouts.report_final_release_printout</field>
        <field name="report_file">hr_printouts.report_final_release_printout</field>
        <field name="binding_model_id" ref="eco_hr_operation.model_hr_operation"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_final_release_report" model="report.paperformat">
        <field name="name">Final Release Paper Format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5.00</field>
        <field name="margin_bottom">5.00</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="hr_printouts.action_final_release_report" model="ir.actions.report">
        <field name="paperformat_id" ref="hr_printouts.paperformat_final_release_report"/>
    </record>

