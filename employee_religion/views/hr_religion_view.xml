<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hr_religion_tree" model="ir.ui.view">
        <field name="name">hr.religion.list</field>
        <field name="model">hr.religion</field>
        <field name="arch" type="xml">
            <list string="Religions">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_hr_religion" model="ir.actions.act_window">
        <field name="name">Religions</field>
        <field name="res_model">hr.religion</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_religion" name="Religions" sequence="200" parent="hr.menu_human_resources_configuration" action="action_hr_religion"/>

</odoo>