<odoo>
    <!-- Operation Type Views -->
    <record id="view_operation_type_form" model="ir.ui.view">
        <field name="name">hr.operation.type.form</field>
        <field name="model">hr.operation.type</field>
        <field name="arch" type="xml">
            <form string="Operation Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_portal"/>
                        <field name="show_fields"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_operation_type_tree" model="ir.ui.view">
        <field name="name">hr.operation.type.tree</field>
        <field name="model">hr.operation.type</field>
        <field name="arch" type="xml">
            <list string="Operation Types">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_operation_type" model="ir.actions.act_window">
        <field name="name">Operation Types</field>
        <field name="res_model">hr.operation.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_config_operation_type" name="Operation Types"
              parent="hr.menu_human_resources_configuration" action="action_operation_type" sequence="10"/>
</odoo>