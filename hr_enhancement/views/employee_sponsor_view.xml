<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="employee_sponsor_form_view">
            <field name="name">employee.sponsor.form.view</field>
            <field name="model">employee.sponsor</field>
            <field name="arch" type="xml">
                <form string="Employee Sponsor">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sponsor_address"/>
                                <field name="sponsor_delivery_postal_address"/>
                                <field name="sponsor_registration_number"/>
                                <field name="sponsor_civil_id"/>
                                <field name="sponsor_phone"/>
                                <field name="sponsor_fax"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_sponsor_list_view" model="ir.ui.view">
            <field name="name">employee.sponsor.list.view</field>
            <field name="model">employee.sponsor</field>
            <field name="arch" type="xml">
                <list string="Employee Sponsor">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_employee_sponsor">
            <field name="name">Employee Sponsor</field>
            <field name="res_model">employee.sponsor</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_config_employee_sponsor" name="Sponsors"
                  parent="hr.menu_human_resources_configuration" sequence="100"/>

        <menuitem id="menu_employee_sponsor" parent="menu_config_employee_sponsor" action="action_employee_sponsor"
                  sequence="1"/>

    </data>
</odoo>
