<odoo>
    <data>
        <record id="view_partner_form_inherit_flight_agent" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.flight.agent</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- You can place it under the contact information group -->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="is_flight_agent"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>