            <field name="name">طلب حجز الوحده</field>
            <field name="model">property.reservation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">eco_real_estate.report_reservation_form</field>
            <field name="report_file">eco_real_estate.report_reservation_form</field>
            <field name="binding_model_id" ref="model_property_reservation"/>
