<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="real_estate_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">eco_real_estate.account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="partner_bank_id" position="after">
                    <field name="project_id" readonly="1"/>
                    <field name="property_id" readonly="1"/>
                    <field name="reservation_id" readonly="1"/>
                    <field name="check_no" readonly="1"/>
                </field>
                <xpath expr="//div[hasclass('oe_title')]/h1[1]" position="replace">
                    <h1 ><field name="reservation_seq" readonly="1"/></h1>

                </xpath>
                <xpath expr="//button[@name='action_post']" position="before">
                     <button name="submit_reservation_seq" string="Submit" type="object" class="oe_highlight"
                                invisible="reservation_seq != False" data-hotkey="q"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>