<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_property_form">
            <field name="name">property.form</field>
            <field name="priority" eval="10"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <button name="set_property_to_available" invisible="state not in 'no_available'"
                                string="Set Property to Available " type="object"/>
                        <button name="set_property_to_block" invisible="state in 'blocked,contract,reserved'"
                                string="Set Property to Blocked " type="object"/>
                        <button name="set_property_to_not_available"
                                invisible="state not in 'free'"
                                string="Set Property to Unavailable " type="object"/>
                        <button name="action_create_reservation" invisible="state not in 'free'"
                                string="Create Reservation " type="object"/>
                        <field name="state" widget="statusbar" clickable="true"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="button_view_reservation" class="oe_stat_button"
                                    icon="fa-book" invisible="reservation_count == 0">
                                <field name="reservation_count" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar"
                               options="{'preview_image': 'image_128'}"/>

                        <div class="oe_title mb24">
                            <h1>
                                <field class="text-break" name="name" placeholder="Property Name" default_focus="1"
                                       required="1"/>
                            </h1>
                            <div class="o_row">
                                <field name="default_code" on_change="1" required="1" placeholder="Property Code"/>
                            </div>
                        </div>
                        <group string="Property Information">
                            <group>
                                <field name="partner_id" required="1"/>
                                <field name="property_date" required="1"/>
                                <field name="list_price"/>
                                <field name="project_categ_type_ids" invisible="1"/>
                                <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <field name="property_project_id"/>
                                <field name="project_categ_type" domain="[('id','in',project_categ_type_ids)]"/>
                                <field name="min_price"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Basic Information">
                                <group>
                                    <group>
                                        <field name="phase_id" domain="[('project_id','=',property_project_id)]"/>
                                        <field name="zone_id" domain="[('project_id','=',property_project_id)]"/>
                                        <field name="building_id" domain="[('project_id','=',property_project_id)]"/>
                                        <field name="block_id"/>
                                        <field name="floor_id"/>
                                        <field name="floor_area"/>
                                        <field name="total_area"/>
                                        <field name="total_open_area"/>
                                        <field name="plot_area"/>
                                        <field name="indoor_area"/>
                                        <field name="description"/>
                                    </group>
                                    <group>
                                        <field name="covered_terrace"/>
                                        <field name="total_covered_terrace"/>
                                        <field name="court_yard"/>
                                        <field name="open_terrace"/>
                                        <field name="balcony_area"/>
                                        <field name="has_garden"/>
                                        <field name="has_pool"/>
                                        <field name="has_garage"/>
                                        <field name="has_sea_view"/>
                                        <field name="has_lagoon_view"/>
                                        <field name="has_landscape_view"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Additional Information">
                                <group>
                                    <group>
                                        <field name="license_code"/>
                                        <field name="license_date"/>
                                        <field name="date_added"/>
                                        <field name="license_location"/>
                                    </group>
                                </group>
                            </page>
                            <!--                            <page string="Geolocation">-->
                            <!--                                <group>-->
                            <!--                                    <group>-->
                            <!--                                        <field name="address" widget="place_autocomplete" class="oe_inline"/>-->
                            <!--                                    </group>-->
                            <!--                                </group>-->
                            <!--                            </page>-->
                            <page string="Contacts">
                                <field name="contact_ids"/>
                            </page>
                            <page string="Notes">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>


                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_property_list">
            <field name="name">property.template.list</field>
            <field name="model">product.template</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <list string="Property">
                    <field name="name" string="Property Name"/>
                    <field name="default_code" string="Property Number"/>
                    <field name="property_project_id"/>
                    <field name="phase_id"/>
                    <field name="floor_id"/>
                    <field name="block_id"/>
                    <field name="level_id"/>
                    <field name="list_price"/>
                    <field name="min_price"/>
                    <field name="state"/>

                    <!--                    <field name="region_id"/>-->
                    <!--                    <field name="rooms"/>-->
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="view_property_kanban">
            <field name="name">property.template.kanban</field>
            <field name="model">product.template</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban" js_class="hr_employee_kanban" sample="1">
                    <field name="id"/>
                    <progressbar field="state"
                                 colors='{"free": "success", "reserved": "warning", "sold": "danger", "on_lease":"info"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                                <field name="image_1920" widget="image" class="o_kanban_image_fill_left"
                                       options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <b>
                                                <span t-if="record.name.raw_value" class="o_kanban_record_subtitle">
                                                    <field name="name"/>
                                                </span>
                                            </b>
                                        </div>
                                    </div>
                                    <ul>
                                        <li/>
                                        <li t-if="record.floor_id.raw_value" class="o_force_ltr">
                                            <b>Floor :</b>
                                            <field name="floor_id"/>
                                        </li>
                                        <!--                                        <li t-if="record.net_price.raw_value" class="o_force_ltr">-->
                                        <!--                                            <b>Home Price :</b>-->
                                        <!--                                            <field name="net_price"/>-->
                                        <!--                                        </li>-->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <record model="ir.ui.view" id="view_property_search">
            <field name="name">property.template.search</field>
            <field name="model">product.template</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Top Search">
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="project" string="Project" domain="[]"
                                context="{'group_by':'property_project_id'}"/>
                        <filter name="phase_id" string="Phase" domain="[]" context="{'group_by':'phase_id'}"/>
                        <filter name="zone_id" string="Zone" domain="[]" context="{'group_by':'zone_id'}"/>
                        <filter name="building_id" string="Building" domain="[]" context="{'group_by':'building_id'}"/>
                        <filter name="block_id" string="Block" domain="[]" context="{'group_by':'block_id'}"/>
                        <filter name="floor" string="Floor" domain="[]" context="{'group_by':'floor_id'}"/>
                        <filter name="level_id" string="Level" domain="[]" context="{'group_by':'level_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_property_act_window">
            <field name="name">Property</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">list,form,graph</field>
            <field name="domain">[('is_property','=',True)]</field>
            <field name="context">{
                'default_is_property':True,
                'default_sale_ok':True,
                'default_purchase_ok':False,
                'default_detailed_type':'service',
                }
            </field>
            <field name="view_id" ref="view_property_list"/>
            <field name="search_view_id" ref="view_property_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_property_act_window_view2">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_property_list"/>
            <field name="act_window_id" ref="action_property_act_window"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_property_act_window_view1">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_property_form"/>
            <field name="act_window_id" ref="action_property_act_window"/>
        </record>

        <record model="ir.ui.view" id="view_property_graph">
            <field name="name">product.template.graph</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <graph string="Invoices" type="pie">
                    <field name="state" type="row"/>
                </graph>
            </field>
        </record>

    </data>
</odoo>
