<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        phases-->
        <record id="property_phase_form_view" model="ir.ui.view">
            <field name="name">property.phase.form</field>
            <field name="model">property.phase</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Phase Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="phase_number"/>
                            </group>
                            <group>
                                <field name="project_id"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter></chatter>


                </form>
            </field>
        </record>

        <record id="property_phase_list_view" model="ir.ui.view">
            <field name="name">property.phase.list</field>
            <field name="model">property.phase</field>
            <field name="arch" type="xml">
                <list string="Phases">
                    <field name="name"/>
                    <field name="phase_number"/>
                    <field name="project_id"/>
                </list>
            </field>
        </record>

        <record id="property_phase_search_view" model="ir.ui.view">
            <field name="name">property.phase.search</field>
            <field name="model">property.phase</field>
            <field name="arch" type="xml">
                <search string="Phases">
                    <group expand="1" string="Group By">
                        <filter string="Project" name="project_id" domain="[]"
                                context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="property_phase_act_window" model="ir.actions.act_window">
            <field name="name">Phases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.phase</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Phase.
                </p>
            </field>
        </record>


        <!--zone -->
        <record id="property_zone_form_view" model="ir.ui.view">
            <field name="name">property.zone.form</field>
            <field name="model">property.zone</field>
            <field name="arch" type="xml">
