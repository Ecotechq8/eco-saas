                            </group>
                            <group>
                                <field name="project_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_zone_list_view" model="ir.ui.view">
            <field name="name">property.zone.list</field>
            <field name="model">property.zone</field>
            <field name="arch" type="xml">
                <list string="zones">
                    <field name="name"/>
                    <field name="zone_number"/>
                    <field name="phase_id"/>
                    <field name="project_id"/>
                </list>
            </field>
        </record>

        <record id="property_zone_search_view" model="ir.ui.view">
            <field name="name">property.zone.search</field>
            <field name="model">property.zone</field>
            <field name="arch" type="xml">
                <search string="zones">
                    <group expand="1" string="Group By">
                        <filter string="Project" name="project_id" domain="[]"
                                context="{'group_by':'project_id'}"/>
                    </group>
                    <group expand="1" string="Group By">
                        <filter string="phase" name="phase_id" domain="[]"
                                context="{'group_by':'phase_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="property_zone_act_window" model="ir.actions.act_window">
            <field name="name">zones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.zone</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new zone.
                </p>
            </field>
        </record>


